<div class="container">
  <p style="color: green"><%= notice %></p>

  <div class="items-index">
    <h1>Todo List</h1>
    <h4>Total: <%= Item.count %></h4>
    
    <% @items.each do |item| %>
      <div class="items-list">
        <div class="item-content">
          <%= link_to item.content, edit_item_path(item) %>
          <div class="btns-item">
            <% if item.completed? %>
              <%= link_to "Done", complete_item_path(item),
                                  method: :patch,
                                  class: "button" %>
            <% else %>
              <%= link_to "Undo", uncomplete_item_path(item),
                                  method: :patch,
                                  class: "button" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
      
  </div>

</div>