<div class="container">
  <div class="item-new">
    <h3>Add New Item to the List</h3>

    <%= form_with(model: [@list, @item], url: list_items_path) do |form| %>
      <div class="item-form">
        <input type="hidden" name="item[list_id]" value="<%= params[:list_id] %>">
        <%= form.text_field :content, class: "item-input" %>
        <%= form.select( :priority, ["low", "medium", "high"], { selected: "medium" }, { class: "item-input" } ) %>
        <%= form.file_field :images, multiple: true, class: "item-input" %>
        <%= form.submit class: "button btn-submit" %>
      </div>
    <% end %>

  </div>
</div>
