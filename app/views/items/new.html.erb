<div class="form-container">

  <div class="list-index-title">
    <h2>New Todo</h2>
  </div>

  <%= form_with(model: [@list, @item], url: list_items_path) do |form| %>
    <div class="form-list-block">
      <% if @item.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this list from being saved:</h2>
          <ul>
            <% @item.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form.text_field :content, placeholder: "Enter Todo" %>
      <div class="custom-select">
        <%= form.select( :priority, ["low", "medium", "high"], { selected: "medium" }) %>
        <span class="focus"></span>
      </div>
      <%= form.file_field :images, multiple: true, class: "custom-file-input" %>
      <%= form.submit class: "submit-btn" %>
    </div>
  <% end %>
</div>