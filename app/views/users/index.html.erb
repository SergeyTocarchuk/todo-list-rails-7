<div class="container">
  <p style="color: green"><%= notice %></p>

  <table>
    <tr>
      <th>ID</th>
      <th>e-mail</th>
      <th>Role</th>
      <th>Lists</th>
      <th>Actions</th>
    <tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.lists.count %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %> | 
            <%= button_to 'Delete', user_path(user.id), method: :delete %>
        </td>
      <tr>
    <% end %>
  </table>

  <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>

</div>

<%= console %>