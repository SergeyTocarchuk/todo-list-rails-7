<div class="container">
  <p style="color: green"><%= notice %></p>

  <div class="list-content">
    <div class="list-name">
    <form>
      <input type="file" id="list_avatar" name="list[avatar]>
    </form>
      <%= render @list %>
      <div class="btns-item">
        <%= link_to "Edit", edit_list_path(@list),
                            class: "button" %>
        <%= button_to "Delete", @list, 
                                method: :delete,
                                class: "button btn-delete" %>
      </div>
    </div>
    <div class="item-content">
      <% @list.items.each do |item| %>
        <p><%= item.id %>. <%= item.content %></p>
      <% end %>
      <%= link_to "Add Item", new_list_item_path(@list),
                              class: "button" %>
    </div>
  </div>
</div>

<%= console %>
