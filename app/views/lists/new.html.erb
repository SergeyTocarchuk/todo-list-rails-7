<div class="form-container">

  <div class="list-index-title">
    <h2>New list</h2>
  </div>

  <%= form_with(model: @list, url: lists_path) do |form| %>
    <div class="form-list-block">
      <% if @list.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
          <ul>
            <% @list.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form.text_field :name, placeholder: "List Title" %>
      <%= form.submit class: "submit-btn" %>
    </div>
  <% end %>
</div>