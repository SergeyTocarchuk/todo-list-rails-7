<div class="container">
  <%# <%= link_to search_lists_path, class: "list-search-button" do %>
  <%#   Search List <%= fa_icon "search", class: "list-search-icon" %>
  <%# <% end %>

  <div class="list-content">
    <table>
      <tr>
        <th></th>
        <th>Lists</th>
        <th>Items</th>
        <th></th>
        <th></th>
      </tr>
      <% @lists.each do |list| %>
        <tr>
          <td>
            <div class="list-table-cell">
              <% if list.completed? %>
                <%= fa_icon "chevron-circle-down", class: "item-icon-completed" %>
              <% end %>
            </div>
          </td>
          <td>
            <% if list.completed? %>
              <div class="list-completed">
                <%= link_to list.name, list_path(list) %>
              </div>
            <% else %>
              <div class="list-incompleted">
                <%= link_to list.name, list_path(list) %>
              </div>
            <% end %>
          </td>
          <td>
            <div class="list-table-cell"> <%= list.items.completed.count %> / <%= list.items.count %> </div>
          </td>
          <td>
            <div class="list-table-cell"> <%= list.date_formatted %> </div>
          </td>
          <td><%= link_to 'Share', find_user_to_share_with_list_path(list) %></td>
          <td>
            <%= link_to edit_list_path(list) do %>
              <%= fa_icon "edit", class: "btn-edit-icon-color" %>
            <% end %>
          </td>
          <td>
            <%= button_to list_path(list), method: :delete, class: "btn-delete" do %>
              <%= fa_icon "trash", class: "btn-delete-icon-color" %>
            <% end %>
          </td>
        <tr>
      <% end %>
    </table>
  </div>

</div>


